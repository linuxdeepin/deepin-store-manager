@import './styl/*'
html
  height 100%
body
  margin 0 auto
  background-color #f5f5f5
  height 100%
#root
  height 100%
  // .App
  //   height 100%
.mainContainer
  display flex

.routerContainer
  flex-grow 1
.container
  width 742px
  margin 0 auto

.button
  border-radius 4px
  background-color #fff
  box-shadow 0 1px 0 0 rgba(0, 0, 0, 0.02), inset 0 1px 0 0 rgba(255, 255, 255, 0.6)
  border solid 1px rgba(0, 0, 0, 0.08)
  color #303030
  font-size 12px
  &:active
    color white
    box-shadow none
    background-color #2ca7f8