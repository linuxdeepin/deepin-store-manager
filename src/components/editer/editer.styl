@import '../../assets/styl/common.styl'

.accrodion-add
  float right
  position relative
  top 10px
  right 50px
  color #2ca7f8
  text-decoration none
  font-size 14px
  font-weight 500

.form-group
  background-color white
  circle-border()
  padding-top 30px
  p
    vertical-align top
    width 100px
    margin 8px 0px 0px 40px
    display inline-block
    font-size 14px
    color #303030

.little-upload
  display flex
  .upload
    width 72px
    height 72px
    background-color rgba(0, 0, 0, 0.04)
    border solid 1px rgba(0, 0, 0, 0.1)
    margin-left 46px
    &-desc
      margin 16px 0px 0px 11px
      display inline
      width 137px
      height 40px
      opacity 0.5
      font-size 14px
      color #303030

.large-upload
  margin 20px 0px 30px 46px
  display inline-block
  width 226px
  height 140px
  background-color rgba(0, 0, 0, 0.04)
  border solid 1px rgba(0, 0, 0, 0.1)
  img 
    margin 30px 96px 6px 96px
  .upload-desc
    font-size 14px
    text-align center
    opacity 0.5
    color #303030

.addimg
  width 34px
  height 34px
  margin 19px

.title
  height 50px
  font-size 16px
  font-weight 500
  background-color white
  margin-top 20px
  display inline-block
  border-radius 4px
  margin-bottom 2px
  p
    margin 12px 0px 14px 16px
    color #303030

.label
  input
    margin 0px 0px 10px 47px
    display block
  div
    display inline-block
    margin 0px 20px 30px 47px
    p
      display inline-block
      width auto
      margin 5px 20px 0px 0px
      border-radius 4px
      background-color rgba(0, 0, 0, 0.04)
      color #787878
      font-size 12px
      height 22px
      span
        float left
        font-size 12px
        margin 2px 0px 2px 15px
      img
        cursor pointer
        margin 3px 5px 6px 0px
        width 12px
        height 12px