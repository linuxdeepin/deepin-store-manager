.accordion
  display inline-block
  margin-bottom 20px
  width 510px
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  &-title
    line-height 36px
    color #303030
    font-size 14px
    cursor pointer
    height 39px
    width 494px
    padding-left 14px
    margin-bottom 5px
    background-color rgba(0, 0, 0, 0.04)
    border solid 1px rgba(0, 0, 0, 0.1)
  &-log
    margin-left 15px
    font-size 14px
    opacity 0.5
    color #303030
  .version
    vertical-align top
    span
      margin 10px 20px
      color #303030
      font-size 14px
    input
      display inline-block
      width 419px
      margin-top 10px
    textarea
      display inline-block
      max-width 419px
      min-width 419px
    .submit-control
      text-align right
      button
        height 36px
        width 419px
        margin 0px 0px 20px 0px
        font-size 14px